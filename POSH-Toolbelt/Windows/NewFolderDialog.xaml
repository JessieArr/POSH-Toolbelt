<Window x:Class="POSH_Toolbelt.Windows.NewFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSH_Toolbelt.Windows"
        mc:Ignorable="d"
        Title="NewFolderDialog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>New Folder Name:</Label>
            <TextBox x:Name="NewFolderName">MyFolder</TextBox>
            <Button Click="Create_Click">Create</Button>
        </StackPanel>
    </Grid>
</Window>
